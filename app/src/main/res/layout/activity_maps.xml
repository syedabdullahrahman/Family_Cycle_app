<RelativeLayout

    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/TF_location"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Place"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/B_search"
        android:background="#E74C3C"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/TF_location"
        android:onClick="onClick"
        android:text="Search"
        android:layout_toRightOf="@+id/TF_location" />


    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.user.familycyclefinal.maps.MapsActivity"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/B_hopistals"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/B_hopistals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TF_location"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:background="#76448A"
        android:onClick="onClick"
        android:text="Hospitals"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/B_schools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TF_location"
        android:layout_centerHorizontal="true"
        android:background="#F1C40F"
        android:onClick="onClick"
        android:text="Restaurents"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/B_restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TF_location"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="#1E8449"
        android:onClick="onClick"
        android:text="Kazi Office"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold" />


</RelativeLayout>