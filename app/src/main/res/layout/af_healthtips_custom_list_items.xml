<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tipspic"
        android:src="@drawable/doctor_list"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tipstitle"
        android:text="Title"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_toRightOf="@+id/tipspic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tipsdescription"
        android:text="Description comes here"
        android:layout_below="@+id/tipstitle"
        android:textSize="19dp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/tipspic"/>

</RelativeLayout>