<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/idicon"
        android:src="@drawable/doctor_list"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/idreg_num"
        android:text="Registration Number  :"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/idicon"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/idgroom_name"
        android:text="Groom Name :"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp"
        android:layout_below="@+id/idreg_num"
        android:layout_toRightOf="@+id/idicon"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/idbride_name"
        android:textStyle="bold"
        android:text="Bride Name  : "
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp"
        android:layout_below="@+id/idgroom_name"
        android:layout_toRightOf="@+id/idicon"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/id_date"
        android:textStyle="bold"
        android:text="Date : "
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp"
        android:layout_below="@+id/idbride_name"
        android:layout_toRightOf="@+id/idicon"/>

    <TextView
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:id="@+id/regnum_ashbe"
        android:text="regnum ashbe"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/idreg_num"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/groomname_ashbe"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/idgroom_name"
        android:layout_alignBottom="@+id/idgroom_name"
        android:layout_toEndOf="@+id/idgroom_name"
        android:layout_toRightOf="@+id/idgroom_name"
        android:text="groom name ashbe"
        android:textSize="15dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/bridename_ashbe"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/idbride_name"
        android:layout_alignBottom="@+id/idbride_name"
        android:layout_toEndOf="@+id/idbride_name"
        android:layout_toRightOf="@+id/idbride_name"
        android:text="bride name ashbe"
        android:textSize="15dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/date_ashbe"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_below="@+id/idbride_name"
        android:layout_toEndOf="@+id/idbride_name"
        android:layout_toRightOf="@+id/idbride_name"
        android:text="date ashbe"
        android:textSize="15dp"
        android:textColor="@android:color/black"/>


</RelativeLayout>