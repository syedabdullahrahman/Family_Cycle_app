<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    tools:context="com.example.user.familycyclefinal.DuringPragnancy.pregnancy_details">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp">


        <TextView
            android:id="@+id/name"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="155dp"
            android:text="Conceieve Date :"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/educationalbackground"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name"
            android:text="First Trimester will start at : "
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dob"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/educationalbackground"
            android:text="Second Trimester will start at : "
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_toEndOf="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/educationalbackground"
            android:layout_alignBottom="@+id/educationalbackground"
            android:layout_toEndOf="@+id/educationalbackground"
            android:layout_toRightOf="@+id/educationalbackground"
            android:text=""
            android:textSize="15dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textView33"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/dob"
            android:layout_alignBottom="@+id/dob"
            android:layout_toEndOf="@+id/dob"
            android:layout_toRightOf="@+id/dob"
            android:text=""
            android:textSize="15dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/nid"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dob"
            android:text="Third Trimester will start at : "
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/nid"
            android:layout_alignBottom="@+id/nid"
            android:layout_toEndOf="@+id/dob"
            android:layout_toRightOf="@+id/dob"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/probable"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nid"
            android:text="Probable Delivery Date : "
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/probable"
            android:layout_alignBottom="@+id/probable"
            android:layout_toEndOf="@+id/dob"
            android:layout_toRightOf="@+id/dob"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:text="Enter Your Concieve Date"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="#229954"/>


    </RelativeLayout>


</ScrollView>
