<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="#A9CCE3"
    tools:context="com.example.user.familycyclefinal.Kazi.KaziProfileEdit">


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:orientation="vertical">


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal">


               <ImageView
                   android:id="@+id/uploadpropic"
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:layout_alignParentTop="true"
                   android:layout_centerHorizontal="true"
                   android:background="@drawable/side_nav_bar"
                   android:src="@drawable/uploadpro" />
           </RelativeLayout>


<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/kazi_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter your name"
        android:textSize="20dp"
      />
</android.support.design.widget.TextInputLayout>





           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               >

               <android.support.design.widget.TextInputEditText
                   android:id="@+id/kazi_edu"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="Enter your educational background"
                   android:textSize="20dp"/>
           </android.support.design.widget.TextInputLayout>


           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               >

               <android.support.design.widget.TextInputEditText
                   android:id="@+id/kazi_dob"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="Enter your date of birth"
                   android:textSize="20dp"/>
           </android.support.design.widget.TextInputLayout>


           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               >

               <android.support.design.widget.TextInputEditText
                   android:id="@+id/kazi_nid"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="Enter your NID Number"
                   android:textSize="20dp"/>
           </android.support.design.widget.TextInputLayout>


           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               >

               <android.support.design.widget.TextInputEditText
                   android:id="@+id/kazi_tin"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="Enter your TIN Number"
                   android:textSize="20dp"/>
           </android.support.design.widget.TextInputLayout>


           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               >

               <android.support.design.widget.TextInputEditText
                   android:id="@+id/kazi_email"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="Enter your email address"
                   android:textSize="20dp"/>
           </android.support.design.widget.TextInputLayout>


           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               >

               <android.support.design.widget.TextInputEditText
                   android:id="@+id/kazi_office"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="Enter your office address"
                   android:textSize="20dp"/>
           </android.support.design.widget.TextInputLayout>


           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               >

               <android.support.design.widget.TextInputEditText
                   android:id="@+id/kazi_parea"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="Enter your preferred area"
                   android:textSize="20dp"/>
           </android.support.design.widget.TextInputLayout>


           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               >

               <android.support.design.widget.TextInputEditText
                   android:id="@+id/kazi_cnumber"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="Enter your contact number"
                   android:textSize="20dp"/>
           </android.support.design.widget.TextInputLayout>


           <Button
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:paddingBottom="10dp"
               android:id="@+id/submit"
               android:textColor="@android:color/white"
               android:textStyle="bold"
               android:textSize="20dp"
               android:background="#1A5276"
               android:text="Submit" />



       </LinearLayout>

   </ScrollView>

</LinearLayout>
