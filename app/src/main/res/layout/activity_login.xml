<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ECC71"
    tools:context="com.example.user.familycyclefinal.LoginActivity">


    <EditText
        android:id="@+id/email"
        android:drawableTint="@android:color/background_dark"
        android:paddingLeft="5dp"
        android:drawableLeft="@drawable/ic_action_man"
        android:background="#11000000"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter UserName or Email"
        android:textAlignment="center"/>


    <EditText
        android:id="@+id/password"
        android:drawableTint="@android:color/background_dark"
        android:padding="5dp"
        android:drawableLeft="@drawable/ic_action_pass"
        android:background="#11000000"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:textAlignment="center"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="15dp"
        android:text="Keep me logged in" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_alignEnd="@+id/password"
        android:layout_alignRight="@+id/password"
        android:text="Forget password?"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        />

    <Button
        android:id="@+id/login"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="@android:color/holo_green_dark"
        android:text="Log in"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/checkBox"
        android:layout_alignRight="@+id/checkBox"
        android:layout_below="@+id/login"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button12"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/checkBox"
        android:layout_toRightOf="@+id/checkBox"
        app:srcCompat="@drawable/gmail" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/login"
        android:layout_marginBottom="14dp"
        android:text="Don't have any account?? signUp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_above="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        app:srcCompat="@drawable/logo" />
</RelativeLayout>
